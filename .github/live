name: Montar e Transmitir VÃ­deo

on:
  workflow_dispatch:
    inputs:
      id:
        description: 'ID do evento/live'
        required: true
        type: string
      video_principal:
        description: 'Caminho do vÃ­deo principal (ex: videos/abc.mp4)'
        required: true
        type: string
      rodape_id:
        description: 'Caminho do rodapÃ©.png'
        required: true
        type: string
      videos_extras:
        description: 'Caminhos dos vÃ­deos extras, separados por vÃ­rgula'
        required: true
        type: string
      stream_url:
        description: 'URL do RTMP (Facebook ou outro)'
        required: true
        type: string
      rclone_conf:
        description: 'ConteÃºdo base64 do rclone.conf'
        required: true
        type: string

jobs:
  montar-video:
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ“¥ Clonar repositÃ³rio
        uses: actions/checkout@v4

      - name: ğŸ“¦ Instalar dependÃªncias
        run: |
          sudo apt update
          sudo apt install -y ffmpeg jq rclone
          echo '{}' > package.json
          npm install puppeteer

      - name: ğŸ“„ Salvar rclone.conf
        run: |
          mkdir -p ~/.config/rclone
          echo "${{ inputs.rclone_conf }}" | base64 -d > ~/.config/rclone/rclone.conf

      - name: ğŸ“„ Salvar sacredi.json decodificando base64
        run: |
          echo "${{ secrets.SACREDI_BASE64 }}" | base64 -d > sacredi.json
          echo "ğŸ“„ ConteÃºdo decodificado de sacredi.json:"
          cat sacredi.json
          echo "--- FIM ---"

      - name: ğŸ“ƒ Processar vÃ­deos extras
        run: |
          IFS=',' read -ra EXTRAS <<< "${{ inputs.videos_extras }}"
          printf '%s\n' "${EXTRAS[@]}" | jq -R . | jq -s . > extras.json

      - name: ğŸ“ Criar input.json com todos os dados
        run: |
          jq -n --arg id "${{ inputs.id }}" \
            --arg video_principal "${{ inputs.video_principal }}" \
            --arg rodape_id "${{ inputs.rodape_id }}" \
            --arg stream_url "${{ inputs.stream_url }}" \
            --slurpfile sacredi sacredi.json \
            --slurpfile extras extras.json \
            '
            ($sacredi[0][0] // {}) as $s |
            {
              id: $id,
              video_principal: $video_principal,
              video_inicial: ($s.video_inicial // ""),
              video_miraplay: ($s.video_miraplay // ""),
              video_final: ($s.video_final // ""),
              logo_id: ($s.logo_id // ""),
              rodape_id: $rodape_id,
              videos_extras: ($extras[0] // []),
              stream_url: $stream_url
            }
            ' > input.json

      - name: ğŸ“‚ Mostrar input.json final
        run: |
          echo "ğŸ“„ ConteÃºdo do input.json:"
          cat input.json
          echo "--- FIM ---"

      - name: ğŸ§  Executar script de montagem
        run: node unir.js

      - name: ğŸ“¤ Salvar artefatos finais (stream_info e sequÃªncia)
        uses: actions/upload-artifact@v4
        with:
          name: dados_transmissao
          path: |
            stream_info.json
            sequencia_da_transmissao.txt

  transmitir-video:
    runs-on: ubuntu-latest
    needs: montar-video
    steps:
      - name: ğŸ“¥ Clonar repositÃ³rio
        uses: actions/checkout@v4

      - name: ğŸ“¦ Instalar dependÃªncias e FFmpeg com suporte a RTMPS
        run: |
          sudo apt update
          sudo apt install -y wget unzip ca-certificates
          wget https://johnvansickle.com/ffmpeg/releases/ffmpeg-release-amd64-static.tar.xz
          tar -xf ffmpeg-release-amd64-static.tar.xz
          cd ffmpeg-*-amd64-static
          sudo mv ffmpeg ffprobe /usr/local/bin/
          ffmpeg -version | grep -E "configuration|ssl|tls"
          cd ..
          echo '{}' > package.json
          npm install puppeteer

      - name: ğŸ“¥ Baixar artefatos do vÃ­deo
        uses: actions/download-artifact@v4
        with:
          name: dados_transmissao
          path: dados_transmissao

      - name: ğŸ“‚ Copiar arquivos
        run: cp -r dados_transmissao/* .

      - name: â–¶ï¸ Transmitir vÃ­deo com FFmpeg
        run: node transmitir.js
